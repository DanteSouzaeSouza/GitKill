<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/dialogLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/UserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:drawableLeft="@drawable/ic_name"
                android:drawablePadding="4dp"
                android:padding="4dp"
                android:textSize="16sp"
                android:textColor="@color/md_grey_800"
                android:text="@string/username"/>

            <TextView
                android:id="@+id/RepoName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_repositories"
                android:drawablePadding="4dp"
                android:layout_marginTop="4dp"
                android:padding="4dp"
                android:textSize="16sp"
                android:textColor="@color/md_grey_800"
                android:text="@string/repo_name"/>

            <TextView
                android:id="@+id/RepoLink"
                android:autoLink="all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:drawableLeft="@drawable/ic_repo_link"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:drawablePadding="4dp"
                android:padding="4dp"
                android:textSize="16sp"
                android:clickable="true"
                android:textColor="@color/md_grey_800"
                android:text="@string/repo_link"/>

            <TextView
                android:id="@+id/Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:drawableLeft="@drawable/ic_description"
                android:drawablePadding="4dp"
                android:padding="4dp"
                android:textSize="14sp"
                android:textColor="@color/md_grey_800"
                android:text="@string/description"/>

            <TextView
                android:id="@+id/Language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:drawableLeft="@drawable/ic_language_new"
                android:padding="4dp"
                android:drawablePadding="4dp"
                android:clickable="true"
                android:textColor="@color/md_grey_800"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:text="@string/language"/>

            <!--Forks,Watching,Stars and Number of Issue layout-->
            <LinearLayout
                android:id="@+id/Section2"
                android:layout_below="@id/DetailsTopLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:weightSum="3.8"
                android:layout_margin="4dp">

                <View
                    android:layout_width="0dp"
                    android:layout_weight=".2"
                    android:layout_height="0dp"/>

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:translationZ="4dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    app:cardUseCompatPadding="true"
                    app:cardBackgroundColor="@color/md_white_1000">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_margin="4dp"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_git_fork_new"/>
                        <TextView
                            android:id="@+id/NumberOfForks"
                            android:textColor="@color/md_grey_800"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="124"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <View
                    android:layout_width="0dp"
                    android:layout_weight=".2"
                    android:layout_height="0dp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_weight=".2"
                    android:layout_height="0dp"/>

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:translationZ="4dp"
                    app:cardCornerRadius="10dp"
                    app:cardUseCompatPadding="true"
                    app:cardBackgroundColor="@color/md_white_1000">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_star_latest"/>
                        <TextView
                            android:id="@+id/NumberOfStars"
                            android:textColor="@color/md_grey_800"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="253"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <View
                    android:layout_width="0dp"
                    android:layout_weight=".2"
                    android:layout_height="0dp"/>


                <View
                    android:layout_width="0dp"
                    android:layout_weight=".2"
                    android:layout_height="0dp"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>