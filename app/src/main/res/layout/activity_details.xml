<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/details_background"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".activities.s.details.DetailsActivity">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mainLayout"
            android:layout_margin="12dp"
            android:paddingBottom="4dp"
            android:orientation="vertical">

            <!--Username and profession section-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="4dp"
                android:padding="4dp">

                <TextView
                    android:id="@+id/WelcomeText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/welcome"
                    android:textSize="16sp"
                    android:padding="4dp"
                    android:textColor="@color/md_white_1000"/>
                <TextView
                    android:id="@+id/UserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/username"
                    android:textSize="16sp"
                    android:padding="4dp"
                    android:textColor="@color/md_white_1000"/>

            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="16dp"
                android:layout_margin="8dp"
                android:paddingBottom="8dp"
                app:cardBackgroundColor="@color/md_white_1000"
                android:translationZ="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="8dp"
                    android:layout_margin="2dp">

                    <!--Details top layout-->
                    <RelativeLayout
                        android:id="@+id/DetailsTopLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/RepoName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:layout_marginLeft="4dp"
                            android:text="@string/repo_name"
                            android:padding="4dp"
                            android:textColor="@color/md_grey_800"/>

                        <TextView
                            android:id="@+id/Profession"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:layout_marginLeft="4dp"
                            android:text="@string/profession"
                            android:layout_below="@id/RepoName"
                            android:padding="4dp"
                            android:textColor="@color/md_grey_800"/>

                        <TextView
                            android:id="@+id/Description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/description"
                            android:textSize="14sp"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:padding="4dp"
                            android:layout_below="@id/Profession"
                            android:layout_margin="4dp"
                            android:textColor="@color/md_grey_800"/>

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/UserIcon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="6dp"
                            app:civ_border_width="2px"
                            app:civ_border_color="@color/md_grey_300"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/dummy_user"/>

                    </RelativeLayout>

                    <!--Forks,Watching,Stars and Number of Issue layout-->
                    <LinearLayout
                        android:id="@+id/Section2"
                        android:layout_below="@id/DetailsTopLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3.8"
                        android:layout_margin="4dp">

                        <View
                            android:layout_width="0dp"
                            android:layout_weight=".2"
                            android:layout_height="0dp"/>

                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_weight=".7"
                            android:translationZ="4dp"
                            android:clickable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="10dp"
                            app:cardUseCompatPadding="true"
                            app:cardBackgroundColor="@color/md_white_1000">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_margin="4dp"
                                android:orientation="vertical">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:src="@drawable/ic_git_fork_new"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="124"/>

                            </LinearLayout>

                        </android.support.v7.widget.CardView>

                        <View
                            android:layout_width="0dp"
                            android:layout_weight=".2"
                            android:layout_height="0dp"/>

                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_weight=".7"
                            android:layout_height="wrap_content"
                            app:cardUseCompatPadding="true"
                            android:translationZ="4dp"
                            android:clickable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            app:cardCornerRadius="10dp"
                            app:cardBackgroundColor="@color/md_white_1000">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_margin="4dp"
                                android:orientation="vertical">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:src="@drawable/ic_watching_icon"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="324"/>

                            </LinearLayout>

                        </android.support.v7.widget.CardView>

                        <View
                            android:layout_width="0dp"
                            android:layout_weight=".2"
                            android:layout_height="0dp"/>

                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_weight=".7"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:translationZ="4dp"
                            app:cardCornerRadius="10dp"
                            app:cardUseCompatPadding="true"
                            app:cardBackgroundColor="@color/md_white_1000">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="4dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:src="@drawable/ic_star_latest"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="253"/>

                            </LinearLayout>

                        </android.support.v7.widget.CardView>

                        <View
                            android:layout_width="0dp"
                            android:layout_weight=".2"
                            android:layout_height="0dp"/>

                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_weight=".7"
                            android:clickable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:layout_height="wrap_content"
                            android:translationZ="4dp"
                            app:cardCornerRadius="10dp"
                            app:cardUseCompatPadding="true"
                            app:cardBackgroundColor="@color/md_white_1000">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="4dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:src="@drawable/ic_bug"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="256"/>

                            </LinearLayout>

                        </android.support.v7.widget.CardView>

                        <View
                            android:layout_width="0dp"
                            android:layout_weight=".2"
                            android:layout_height="0dp"/>

                    </LinearLayout>

                    <!--Section create , update date and language-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/Section2"
                        android:orientation="horizontal"
                        android:paddingBottom="2dp"
                        android:weightSum="2"
                        android:layout_margin="4dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/Created_At"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/md_grey_800"
                                android:textSize="14sp"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:padding="4dp"
                                android:text="@string/created_at"/>

                            <TextView
                                android:id="@+id/Updated_At"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/md_grey_800"
                                android:textSize="14sp"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:padding="4dp"
                                android:text="@string/updated_at"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:orientation="vertical">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_language_latest"/>

                            <TextView
                                android:id="@+id/Language"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="@color/md_grey_800"
                                android:text="@string/language"/>

                        </LinearLayout>

                    </LinearLayout>


                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginTop="-30dp"
                android:layout_marginBottom="-30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/curve_back"/>
                <View
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:rotation="180"
                    android:background="@drawable/curve_back"/>

            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="16dp"
                android:layout_margin="8dp"
                android:paddingBottom="8dp"
                app:cardBackgroundColor="@color/md_white_1000"
                android:translationZ="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp">

                    <!--Details top layout-->
                    <android.support.design.widget.TabLayout
                        android:id="@+id/sliding_tabs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:tabMode="fixed" />

                    <android.support.v4.view.ViewPager
                        android:id="@+id/viewpager"
                        android:layout_below="@id/sliding_tabs"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:background="@android:color/white" />


                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>